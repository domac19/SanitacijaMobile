<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingVertical="10dp">
	<TextView
		android:layout_width="80dp"
		android:layout_height="wrap_content"
		android:text="1"
		android:textAlignment="center"
		android:id="@+id/textView1"
		android:layout_gravity="center" />
	<TextView
		android:layout_gravity="center"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:text="opis pozicije"
		android:id="@+id/textView2"/>
	<TextView
		android:layout_gravity="center"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="editTime"
		android:textAlignment="center"
		android:id="@+id/textView3"/>
	<Button
		android:paddingHorizontal="45dp"
		android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
        android:drawableTint="@color/green"
		android:drawableEnd="@mipmap/edit"
		android:id="@+id/editBtn"/>
	<Button
		android:visibility="gone"
		android:paddingHorizontal="45dp"
		android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
        android:drawableTint="@color/green"
		android:drawableEnd="@mipmap/checked"
		android:id="@+id/checkedBtn"/>
	<Button
		android:visibility="gone"
		android:paddingHorizontal="45dp"
		android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:drawableEnd="@mipmap/negative"
		android:id="@+id/uncheckedBtn"/>
	<Button
		android:paddingHorizontal="40dp"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:drawableTint="@android:color/holo_red_dark"
		android:drawableEnd="@mipmap/delete_outline"
		android:id="@+id/deleteBtn"/>
</LinearLayout>