<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
      
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:text="Infestacija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/podnaslovnaslov1"
            android:layout_marginBottom="15dp"
            android:textSize="40px"
            android:textColor="#ff0288d1"/>
		<CheckBox
			android:text="Štakori"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/stakoriBox" />
		<CheckBox
			android:text="Miševi"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/miseviBox" />
		<CheckBox
			android:text="Drugi štetni mišoliki glodavci"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/drugiGlodavciBox" />
        <TextView
            android:text="Povoljni uvjeti za glodavce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/podnaslov2"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="40px"
            android:textColor="#ff0288d1"/>
		<CheckBox
			android:text="Neuređen okoliš"
			android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
			android:layout_height="wrap_content"
			android:id="@+id/okolisBox" />
		<CheckBox
			android:text="Hrana za glodavce"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/hranaBox" />
		<CheckBox
			android:text="Neispravna odvodnja"
			android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
			android:layout_height="wrap_content"
			android:id="@+id/odvodnjaBox" />   
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot1"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/androidBlue"
                android:id="@+id/dot2"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot3"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>