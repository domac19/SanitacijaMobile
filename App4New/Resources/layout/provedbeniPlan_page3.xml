<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
    <ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="OPĆA DERATIZACIJA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/naslov1"
                    android:layout_marginBottom="15dp"
                    android:textSize="50px"
                    android:textColor="#ff0288d1"/>
                <TextView
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="U svrhu kemijske deratizacije koristiti će se antikoagularni zatrovani mamci II. generacije, sa dozvolom da se mogu koristiti u komunalnoj higijeni, a to su:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView2" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/materijaliDeratizacijeListView"
                    android:layout_marginTop="20dp"
                    android:scrollbars="vertical"  
                    android:layout_width="match_parent"  
                    android:layout_height="200dp"/>

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Kontrolni izvid štetnih glodavaca provoditi će se koliko puta godišnje:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView4" />
                <EditText
                    android:inputType="number"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/brojIzvidaGlodavacaGodisnje" />
                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Kontrolni izvid štetnih glodavaca (navesti mjesece i godinu):"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView5" />
                <EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/rasporedIzvidaGlodavaca" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Mjere opće deratizacije imaju se perventivno provoditi koliko puta tijekom godišnjeg razdoblja:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView6" />
                <EditText
                    android:inputType="number"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/brojOpcihDeratizacijaGodisnje" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Vremenski raspored rada (navesti mjesece i godinu):"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView7" />
                <EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/rasporedRadaDeratizacije" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="100dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="OPĆA DEZINSEKCIJA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/naslov2"
                    android:layout_marginBottom="15dp"
                    android:textSize="50px"
                    android:textColor="#ff0288d1"/>
                <TextView
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="U svrhu dezinsekcije koristiti će se insekticidi niske toksičnosti, sa dozvolom da se mogu koristiti u komunalnoj higijeni, kao što su (ovisno o vrsti utvrđenog štetnika i infestaciji):"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView22" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/materijaliDezinsekcijaListView"
                    android:layout_marginTop="20dp"
                    android:scrollbars="vertical"  
                    android:layout_width="match_parent"  
                    android:layout_height="200dp"/>

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Kontrolni izvid štetnih insekata provoditi će se koliko puta godišnje:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView24" />
                <EditText
                    android:inputType="number"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/brojIzvidaInsekataGodisnje" />
                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Kontrolni izvid štetnih inseketa (navesti mjesece i godinu):"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView25" />
                <EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/rasporedIzvidaInsekata" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Mjere opće dezinsekcije imaju se perventivno provoditi koliko puta tijekom godišnjeg razdoblja:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView26" />
                <EditText
                    android:inputType="number"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/brojOpcihDezinsekcijeGodisnje" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Vremenski raspored rada (navesti mjesece i godinu):"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView27" />
                <EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/rasporedRadaDezinsekcije" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Vrijeme provedbe: dezinsekcija će se provoditi isključivo nakon završetka radnog procesa korisnika prostora, odnosno od koliko sati: "
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView28" />



                <TextView
                    android:visibility="gone"
                    android:layout_marginVertical="10dp"
                    android:textSize="40px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20:00 h"
                    android:id="@+id/satZaProvedbuDezinsekcijeTV"/>
                <TimePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/satZaProvedbuDezinsekcije"/>

                <!--<EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/satZaProvedbuDezinsekcije" />-->


                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="a) kontrola štetnika - nakon minimalno koliko dana:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView29" />
                <EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/brojDanaDoDodatneKontroleInsekata" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="b) dezinsekcija - nakon koliko dana od inicijalne dezinsekcije:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView30" />
                <EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/brojDanaDoDodatneDezinsekcije" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="50dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="OPĆA DEZINFEKCIJA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/naslov3"
                    android:layout_marginBottom="15dp"
                    android:textSize="50px"
                    android:textColor="#ff0288d1"/>
                <TextView
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="U svrhu dezinfekcije koristiti će se dezinficijensi niske toksičnosti, sa dozvolom da se mogu koristiti u komunalnoj higijeni, kao što su (ovisno o vrsti utvrđenog štetnika i infestaciji):"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView32" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/materijaliDezinfekcijaListView"
                    android:layout_marginTop="20dp"
                    android:scrollbars="vertical"  
                    android:layout_width="match_parent"  
                    android:layout_height="200dp"/>

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Mjere opće dezinfekcije imaju se perventivno provoditi koliko puta tijekom godišnjeg razdoblja:"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView36" />
                <EditText
                    android:inputType="number"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/brojOpcihDezinfekacijaGodisnje" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Vremenski raspored rada (navesti mjesece i godinu):"
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView37" />
                <EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/rasporedRadaDezinfekacije" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Vrijeme provedbe: dzinsekcija će se provoditi isključivo nakon završetka radnog procesa korisnika prostora, odnosno od koliko sati: "
                    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/textView38" />

                <TextView
                    android:visibility="gone"
                    android:layout_marginVertical="10dp"
                    android:textSize="40px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20:00 h"
                    android:id="@+id/satZaProvedbuDezinfekacijeTV"/>
                <TimePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/satZaProvedbuDezinfekacije"/>
                <!--<EditText
                    android:inputType="text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/satZaProvedbuDezinfekacije" />-->
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginBottom="20dp"
                android:id="@+id/buttonsLayout">
                <Button
                    android:paddingHorizontal="20dp"
                    android:width="120dp"
                    android:text="Odustani"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@mipmap/cancelBtn"
                    android:textColor="@android:color/holo_red_dark"
                    android:id="@+id/odustaniBtn"
                    android:textSize="30px"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:width="120dp"
                    android:text="spremi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@mipmap/saveBtn"
                    android:textColor="@android:color/holo_green_dark"
                    android:id="@+id/spremiBtn"
                    android:textSize="30px"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginBottom="20dp"
                android:id="@+id/buttonBack">
                <Button
                    android:drawableEnd="@mipmap/arrow_right"
                    android:text="NAZAD"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@mipmap/saveBtn"
                    android:drawableTint="@android:color/holo_green_dark"
                    android:id="@+id/backBtn"
                    android:textSize="30px"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/circle"
                        android:tint="@color/colorPrimary"
                        android:id="@+id/dot1"/>
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/circle"
                        android:tint="@color/colorPrimary"
                        android:id="@+id/dot2"/>
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/circle"
                        android:tint="@color/androidBlue"
                        android:id="@+id/dot3"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>   
</LinearLayout>