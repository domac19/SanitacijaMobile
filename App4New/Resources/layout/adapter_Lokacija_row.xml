<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/row"
	android:gravity="center_vertical">
	<LinearLayout
		android:orientation="horizontal"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
			android:background="@mipmap/settings"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:backgroundTint="@color/white"
			android:id="@+id/postavkeBtn"/>
    </LinearLayout>
	<TextView
		android:paddingHorizontal="5dp"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textAlignment="center"
		android:text="ŠIFRAdsfsdfdsfgdfgdsgds"
		android:id="@+id/naziv"/>
	<TextView
		android:paddingHorizontal="5dp"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textAlignment="center"
		android:text="ŠIFRA"
		android:id="@+id/mjesto"/>
	<TextView
		android:paddingHorizontal="5dp"
		android:layout_width="170dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textAlignment="center"
		android:text="dhfhsdfhgdsjhfgjhsdgjfgjsdhgfjgsdjhgfjhsdfjhgdshjfgjhdsgfjhgsdjgfjhsdg"
		android:id="@+id/adresa"
		android:width="170dp"/>
	<TextView
		android:paddingHorizontal="5dp"
		android:layout_width="100dp"
		android:layout_height="60dp"
		android:gravity="center"
		android:textAlignment="center"
		android:text="prvi dolazak"
		android:id="@+id/tipAkcije"/>
	<LinearLayout
		android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
			android:background="@mipmap/radiobtn"
			android:layout_marginLeft="65dp"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_marginRight="65dp"
			android:id="@+id/provedbeniPlanBtn"/>
    </LinearLayout>
	<Button
		android:textColor="@color/green"
		android:background="@mipmap/saveBtn"
		android:text="Izdaj potvrdu"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:id="@+id/potvrdaBtn" />

    <LinearLayout
		android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:visibility="gone"
            android:layout_marginLeft="5dp"
		    android:background="@mipmap/lock"
            android:backgroundTint="@color/green"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:id="@+id/zakljucajBtn" />
        <Button
            android:layout_marginLeft="5dp"
		    android:background="@mipmap/lock_open"
            android:backgroundTint="@color/redPrimary"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:id="@+id/otkljucajBtn" />
    </LinearLayout>
</LinearLayout>