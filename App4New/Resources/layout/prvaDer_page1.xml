<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
   <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:text="Prisutnost glodavaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/naslovTextView"
            android:layout_marginBottom="15dp"
            android:textSize="40px"
            android:textColor="#ff0288d1"/>
		<CheckBox
			android:text="Rupe"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/rupeBox" />
		<CheckBox
			android:text="Leglo"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/legloBox" />
		<CheckBox
			android:text="Tragovi nogu"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/tragoviNoguBox" />
		<CheckBox
			android:text="Viđen živi glodavaci"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/videnZiviGlodavacBox" />
		<CheckBox
			android:text="Izmet"
			android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
			android:layout_height="wrap_content"
			android:id="@+id/izmetBox" />
		<CheckBox
			android:text="Viđeni uginuli glodavci"
            android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/videnUginuliGlodavacBox" />
		<CheckBox
			android:text="Šteta"
			android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
			android:layout_height="wrap_content"
			android:id="@+id/stetaBox" />   
    </LinearLayout>
    
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/androidBlue"
                android:id="@+id/dot1"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot2"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot3"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

