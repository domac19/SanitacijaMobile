<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:layout_marginVertical="10dp">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
			        android:text="Komitent"
			        android:textSize="40px"
			        android:layout_width="0dp"
                    android:layout_height="wrap_content"
			        android:id="@+id/komitentTextView"
                    android:textColor="@color/white"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
		            android:text="Lokacija"
		            android:textSize="40px"
		            android:layout_width="0dp"
                    android:layout_height="wrap_content"
		            android:id="@+id/lokacijaTextView"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">
                <Button
                    android:textSize="13dp"
                    android:textColor="@color/bluePrimary"
                    android:background="@mipmap/borderBlueBtn"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
                    android:padding="5dp"
			        android:id="@+id/odabirKomitentaBtn" />
                <Button
                    android:textSize="13dp"
                    android:textColor="@color/bluePrimary"
                    android:background="@mipmap/borderBlueBtn"
                    android:layout_marginLeft="5dp"
                    android:text="Prostor za razvrstavanje otpada"
                    android:layout_weight="1"
			        android:layout_width="0dp"
                    android:padding="5dp"
			        android:layout_height="match_parent"
			        android:id="@+id/odabirLokacijeBtn" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp">
					<RadioGroup
						android:weightSum="100"
						android:padding="20dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:id="@+id/radioGroup">
						<RadioButton
							android:layout_weight="50"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Poznata Pozicija"
							android:id="@+id/poznataPozicija"/>
						<RadioButton
							android:layout_weight="50"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Nova Pozicija"
							android:id="@+id/novaPozicija" />
					</RadioGroup>

        
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/poznataLayout">
                        <LinearLayout
                            android:weightSum="100"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_weight="10"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:drawableTint="@color/androidBlue"
                                android:drawableStart="@mipmap/barcode_scan"
                                android:id="@+id/barcodeReaderPozBtn" />
                            <EditText
                                android:inputType="text"
                                android:layout_weight="70"
                                android:layout_width="50dp"
                                android:capitalize="characters"
                                android:layout_height="wrap_content"
                                android:id="@+id/positionInput"/>
                            <Button
                                android:layout_weight="10"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:drawableTint="@color/androidBlue"
                                android:drawableEnd="@mipmap/search"
                                android:id="@+id/searchPositionBtn" />
                            <Button
                                android:layout_weight="10"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:drawableTint="@color/androidBlue"
                                android:drawableEnd="@mipmap/lista"
                                android:id="@+id/odaberPozicijuBtn" />
                        </LinearLayout>
                        <TextView
                            android:visibility="invisible"
                            android:layout_marginHorizontal="20dp"
                            android:textColor="@color/redPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/messagePoznata"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/novaLayout">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/bluePrimary"
                                android:text="Broj"
                                android:layout_marginLeft="20dp"
                                android:textSize="40px"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/barcodeTextView"/>
                            <TextView
                                android:textColor="@color/bluePrimary"
                                android:text="Oznaka"
                                android:layout_marginLeft="10dp"
                                android:textSize="40px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/barcode2TextView"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">
                            <EditText
                                android:inputType="number"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/positionBrojInput" />
                            <EditText
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:capitalize="characters"
                                android:id="@+id/positionBrojOznakaInput" />
                            <Button
                                android:layout_marginLeft="20dp"
                                android:layout_weight="10"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:drawableTint="@color/androidBlue"
                                android:background="@android:color/transparent"
                                android:drawableStart="@mipmap/search"
                                android:id="@+id/searchPozicijaNovaBtn"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:visibility="invisible"
                            android:textColor="@color/redPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/messagePosition"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:textColor="@color/bluePrimary"
                            android:text="Barcode"
                            android:textSize="40px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/barcode3TextView"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="110"
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_weight="10"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:drawableTint="@color/androidBlue"
                                android:background="@android:color/transparent"
                                android:drawableStart="@mipmap/barcode_scan"
                                android:id="@+id/barcodeReaderNovaBtn" />
                            <EditText
                                android:layout_weight="90"
                                android:inputType="number"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/barcodeInput"/>
                            <Button
                                android:drawableTint="@color/androidBlue"
                                android:layout_weight="10"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:drawableEnd="@mipmap/search"
                                android:id="@+id/searchBarcodeBtn"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:visibility="invisible"
                            android:textColor="@color/redPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/messageBarcode"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/bluePrimary"
                        android:text="Opis Pozicije"
                        android:textSize="40px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/opisPozicijeTextView"
                        android:layout_marginTop="20dp"/>
		            <EditText
                        android:layout_marginHorizontal="20dp"
                        android:lines="3"
                        android:gravity="top"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:id="@+id/opisPozicije" />
                    <TextView
                        android:layout_marginHorizontal="20dp"
                        android:visibility="invisible"
                        android:textColor="@color/redPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/messageOpis"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>