<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<TextView
            android:layout_marginRight="10dp"
            android:textSize="40px"
            android:textColor="@color/bluePrimary"
			android:text="Naziv materijala:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/nazivTV" />
        <TextView
            android:textSize="35px"
			android:text="dkjnuhfuhfrf"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/nazivData" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<TextView
            android:layout_marginRight="10dp"
            android:textSize="40px"
            android:textColor="@color/bluePrimary"
			android:text="Cijena:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/cijenaTV" />
		<TextView
            android:textSize="35px"
            android:layout_marginRight="10dp"
			android:text="1112"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/cijenaData" />
        <TextView
            android:textSize="35px"
			android:text="kn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/knTV" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<TextView
            android:textSize="40px"
            android:layout_marginRight="10dp"
            android:textColor="@color/bluePrimary"
			android:text="Količina:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/kolicicnaTV" />
        <EditText
			android:textSize="35px"
            android:digits="0123456789,"
			android:inputType="text"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:id="@+id/kolicinaInput"
			android:textStyle="bold" />
		<Spinner
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:id="@+id/spinnerMjernaJedinica" />
    </LinearLayout>
    <TextView
        android:layout_marginHorizontal="20dp"
        android:text="Unesite količinu*"
        android:visibility="invisible"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message"/>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="40dp">
        <Button
            android:paddingHorizontal="20dp"
            android:width="120dp"
            android:text="Odustani"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@mipmap/cancelBtn"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/odustaniBtn"
            android:textSize="30px"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
        <Button
            android:width="120dp"
            android:text="Spremi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@mipmap/saveBtn"
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/spremiBtn"
            android:textSize="30px"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>