<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
			<TextView
				android:text="Šifra materijala:"
                android:textSize="40px"
                android:textColor="@color/bluePrimary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/sifraTV"
                android:layout_marginRight="10dp"/>
			<TextView
				android:textSize="35px"
				android:text="0012"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:id="@+id/sifraData"
				android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
			<TextView
                android:textSize="40px"
                android:textColor="@color/bluePrimary"
				android:text="Naziv materijala:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/nazivTV"
                android:layout_marginRight="10dp"/>
			<TextView
				android:textSize="35px"
				android:text="Ljepljiva podloška"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/nazivData"
				android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
			<TextView
                android:gravity="center"
                android:textSize="40px"
                android:textColor="@color/bluePrimary"
				android:text="Količina:"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/kolTV"
                android:layout_marginRight="10dp"/>

            <EditText
				android:textSize="35px"
                android:digits="0123456789,"
				android:inputType="text"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:id="@+id/kolicinaInput"
				android:textStyle="bold" />

			<TextView
				android:text="/ Dostupno "
                android:gravity="center"
                android:textSize="35px"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/dosTV" />
			<TextView
				android:text="20"
                android:gravity="center"
                android:textSize="35px"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/dostupno" />
            <TextView
                android:layout_marginLeft="5dp"
				android:text="kg"
                android:gravity="center"
                android:textSize="35px"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/mjernaJedinicaTV" />
        </LinearLayout>
        <TextView
            android:text="Unesite ispravnu količinu!"
            android:visibility="invisible"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageKolicina"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
			<TextView
                android:textSize="40px"
                android:textColor="@color/bluePrimary"
				android:text="Cijena:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/cijenaTV"
                android:layout_marginRight="10dp"/>
			<TextView
				android:textSize="35px"
				android:text="89,00"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/cijenaData"
				android:textStyle="bold" />
            <TextView
                android:textSize="35px"
				android:text="kn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/knTV"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
			<TextView
                android:textSize="40px"
                android:textColor="@color/bluePrimary"
				android:text="Iznos:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/iznosTV"
                android:layout_marginRight="10dp"/>
			<TextView
				android:textSize="35px"
				android:text="89,00"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/IznosData"
				android:textStyle="bold" />
            <TextView
                android:textSize="35px"
				android:text="kn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/kn2TV"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="40dp">
             <Button
                android:paddingHorizontal="20dp"
                android:width="120dp"
                android:text="Odustani"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/cancelBtn"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/odustaniBtn"
                android:textSize="30px"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>
             <Button
                android:width="120dp"
                android:text="Spremi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/saveBtn"
                android:textColor="@android:color/holo_green_dark"
                android:id="@+id/spremiBtn"
                android:textSize="30px"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>