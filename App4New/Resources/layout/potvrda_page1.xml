<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
    <ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
		        <TextView
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Godina/Broj potvrde"
			        android:layout_width="190dp"
			        android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
			        android:id="@+id/textView1" />
		        <EditText
                    android:layout_gravity="end"
                    android:text="2020"
			        android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:id="@+id/godinaInput" />
		        <EditText
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/potvrdaBrInput" />
            </LinearLayout>
            <TextView
                android:visibility="invisible"
                android:text="Unesite ispravni broj potvrde*"
                android:layout_margin="20dp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message"/>
            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="80px" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:id="@+id/tipObjekta1">
		        <TextView
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Lokacija tip 1 broj objekata:"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
			        android:id="@+id/tip1TV" />
		        <EditText
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/brojObjekata1Input" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:id="@+id/tipObjekta2">
		        <TextView
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Lokacija tip 2 broj objekata:"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
			        android:id="@+id/tip2TV" />
		        <EditText
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/brojObjekata2Input" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp">
		        <TextView
                    android:textSize="40px"
                    android:textColor="#ff0288d1"
			        android:text="Infestacija"
			        android:layout_width="150dp"
			        android:layout_height="wrap_content"
			        android:id="@+id/infestacijaTV" />
		        <Spinner
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/spinnerInfestacija" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="40px"
                android:textColor="#ff0288d1"
		        android:text="Opis rada"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/opisTV" />
	        <EditText
                android:hint="Ovdje opišite što ste radili..."
                android:layout_marginHorizontal="20dp"
                android:lines="3"
                android:gravity="top"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
		        android:id="@+id/opisRadaInput" />
        </LinearLayout>
    </ScrollView>    
</LinearLayout>