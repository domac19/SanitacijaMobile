<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:minWidth="25px"
        android:background="@mipmap/homeMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarHomePage"/>
    
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <RadioButton
            android:layout_marginBottom="10dp"
            android:text="kutija s ljepljivim podloškama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:checked="false"
            android:minHeight="25px"
            android:visibility="gone"
            android:id="@+id/kutijasLjepljivimPodloskom" />
        <RadioButton
            android:layout_marginBottom="10dp"
            android:text="kutija s rodenticidima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:checked="false"
            android:id="@+id/kutijaSRodenticima" />
        <RadioButton
            android:layout_marginBottom="10dp"
            android:text="kutija - živolovke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:checked="false"
            android:minHeight="25px"
            android:visibility="gone"
            android:id="@+id/kutijaZivolovka" />
    </RadioGroup>
    <TextView
        android:text="Učinjeno"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="15dp"
        android:textSize="40px"
        android:paddingLeft="20dp"
        android:textColor="#ff0288d1"/>

    <LinearLayout
        android:id="@+id/checkboxRot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <CheckBox
            android:text="postavljeni novi mamci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginBottom="10dp"
            android:id="@+id/noviMamciUcinjenoRot" />
        <CheckBox
            android:text="postavljena nova kutija"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/novaKutijaUcinjenoRot" />
        <CheckBox
            android:text="kutija nadopunjena s mekom"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/nadopunjenaMekomUcinjenoRot" />
         <CheckBox
            android:text="kutija nadopunjena s mekom"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/masaMeke1UcinjenoRot" />
         <CheckBox
            android:text="kutija nadopunjena s mekom"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/masaMeke2UcinjenoRot" />
         <CheckBox
            android:text="kutija nadopunjena s mekom"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/masaMeke3UcinjenoRot" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkboxLjep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <CheckBox
            android:text="postavljena nova ljepljiva podloška"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginBottom="10dp"
            android:id="@+id/novaLjepPodUcinjenoLjep" />
        <CheckBox
            android:text="postavljena nova kutija"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/novaKutijaUcinjenoLjep" />    
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkboxZiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <CheckBox
            android:text="postavljena nova kutija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginBottom="10dp"
            android:id="@+id/novaKutijaUcinjenoZiv" />
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot1"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/androidBlue"
                android:id="@+id/dot2"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/circle"
                android:tint="@color/colorPrimary"
                android:id="@+id/dot3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
